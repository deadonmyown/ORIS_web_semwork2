<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:windows="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.WindowsSpecific;assembly=Microsoft.Maui.Controls"
             x:Class="MauiApp_HitThePlane.MainPage"
             BackgroundColor="LightSkyBlue"
             Background="black">

    <AbsoluteLayout WidthRequest="680"
                    HeightRequest="400">

        <VerticalStackLayout Spacing="25"
                             Padding="30,0"
                             VerticalOptions="Center">



        </VerticalStackLayout>

        <Image Source="scene.png"
               AbsoluteLayout.LayoutBounds="0, 0, 680, 400" />

        <Image  x:Name="plane_1"
                Source="green_plane.png"
                AbsoluteLayout.LayoutBounds="50, 100, 100, 40" />

        <Image  x:Name="plane_2"
                Source="red_plane.png"
                AbsoluteLayout.LayoutBounds="50, 150, 100, 40" />

        <Image x:Name="projectile"
               Source="explosion.gif"
               AbsoluteLayout.LayoutBounds="50, 150, 30, 30" />

        <Entry x:Name="PlayerText"
               Background="blue"
               AbsoluteLayout.LayoutBounds="200, 150" />
        <Button x:Name="PlayerBtn"
                Text="Click me"
                Clicked="OnAddPlayerClicked"
                Background="blue"
                AbsoluteLayout.LayoutBounds="200, 100" />

        <Button x:Name="StartBtn"
                Text="Start timer"
                Clicked="StartTimer"
                AbsoluteLayout.LayoutBounds="300, 100, 100, 40" />

        <Button x:Name="StopBtn"
                Text="Stop timer"
                Clicked="StopTimer"
                AbsoluteLayout.LayoutBounds="300, 150, 100, 40" />

    </AbsoluteLayout>
</ContentPage>


